          <button class="login-register-btn" data-toggle="modal" data-target="#loginModal">Log in</button>
          <button class="login-register-btn" data-toggle="modal" data-target="#registerModal">Registration</button>
          <%= link_to "Admin Login", new_admin_session_path, class: "btn btn-secondary" %>
          <%= render 'public/shared/error_messages', resource: @user %>
        <% end %>
      </div>
    </div>
  </div>
</div>
